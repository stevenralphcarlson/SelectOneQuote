<%- include("header") -%>
<script type="text/javascript">
  $(document).ready(function () {
    $("#part2").hide();
    $("#summary-button").hide();
    $("#openShipping").hide();
    $("#enclosedShipping").hide();
    $("#summary-button").hide();

    var priceHierarchy = {
      openstandard: "1",
      openpremium: "2",
      openexpress: "3",
      enclcosedstandard: "4",
      enclosedpremium: "5",
      enclosedexpress: "6",
    };

    // Enables Bootstrap 'popover' content
    $(function () {
      $('[data-toggle="popover"]').popover();
    });

    $("#cbAcceptRestrictions").click(function () {
      if ($("#cbAcceptRestrictions").is(":checked")) {
        $("#continueToOpen").prop("disabled", false);
      } else {
        $("#continueToOpen").prop("disabled", true);
      }
    });

    $("#continueToOpen").click(function () {
      $("#part1").hide();
      $("#part2").show();
      $("#summary-button").show();
      $("#header").text("Delivery Options");
      $("#openstandard").prop("checked", true);
      $("#openShipping").show();
    });

    $("#selectEnclosed").click(function () {
      $("#part1").hide();
      $("#part2").show();
      $("#summary-button").show();
      $("#header").text("Delivery Options");
      $("#enclosedstandard").prop("checked", true);
      $("#enclosedShipping").show();
    });
  });
</script>
